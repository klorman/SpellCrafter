<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:controls="clr-namespace:SpellCrafter.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
	<Style Selector="controls|ColoredSvg">
		<Setter Property="SvgColor" Value="{DynamicResource MaterialPrimaryMidBrush}"/>
		<Setter Property="SvgClass" Value="Primary"/>
	</Style>
	<Style Selector="controls|ColoredSvg:disabled">
		<Setter Property="SvgColor" Value="{DynamicResource MaterialCheckBoxDisabledBrush}"/>
	</Style>
</Styles>
