<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="SpellCrafter.App">
    <Application.Styles>
		<themes:MaterialThemeBase/>
		<StyleInclude Source="avares://SpellCrafter/Controls/MetroWindow.paml"/>
		<StyleInclude Source="avares://SpellCrafter/Styles/TabControl.axaml"/>
		<StyleInclude Source="avares://SpellCrafter/Styles/DataGrid.axaml"/>
		<StyleInclude Source="avares://SpellCrafter/Styles/ColoredSvg.axaml"/>
		<StyleInclude Source="avares://SpellCrafter/Styles/ContextMenu.axaml"/>
		
		<Style Selector=":is(Control)">
			<Setter Property="FocusAdorner">
				<Setter.Value>
					<FocusAdornerTemplate>
						<Border BorderThickness="0"/>
					</FocusAdornerTemplate>
				</Setter.Value>
			</Setter>
			<Setter Property="TextElement.FontSize" Value="14"/>
		</Style>
    </Application.Styles>
</Application>
